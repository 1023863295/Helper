<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vip.helper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".global.MyApplication"
        android:theme="@style/AppTheme">
        <!--  autoLayout-->
        <meta-data android:name="design_width" android:value="720"></meta-data>
        <meta-data android:name="design_height" android:value="1280"></meta-data>

        <activity android:name=".ui.WelcomeAty"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主页面 -->
        <activity android:name=".ui.HomeAty"
            android:screenOrientation="portrait"></activity>

        <!-- 登录 -->
        <activity android:name=".ui.LoginAty"
            android:screenOrientation="portrait"></activity>


        <!-- 注册页面 -->
        <activity android:name=".ui.RegisterAty"
            android:screenOrientation="portrait"></activity>

        <!-- 找回密碼页面 -->
        <activity android:name=".ui.FindBackAty"
            android:screenOrientation="portrait"></activity>


    </application>

</manifest>