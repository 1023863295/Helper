<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/home_top"
        layout="@layout/top_title_layout"></include>


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/home_bottom_bar"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_height="98px">

        <TextView
            android:id="@+id/home_bottom_main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="首页"/>
        <TextView
            android:id="@+id/home_bottom_find"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="发现"/>
        <TextView
            android:id="@+id/home_bottom_publish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="发布"/>
        <TextView
            android:id="@+id/home_bottom_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="消息"/>
        <TextView
            android:id="@+id/home_bottom_mine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <FrameLayout
        android:id="@+id/home_frame_container"
        android:layout_below="@id/home_top"
        android:layout_above="@id/home_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
    

</com.zhy.autolayout.AutoRelativeLayout>
